{
  "name": "manga-agent-backend",
  "version": "1.0.0",
  "description": "Backend MCP server for Manga Management Agent with Gemini AI",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run api:watch\" \"npm run mcp\"",
    "api": "tsx src/api/server.ts",
    "api:watch": "tsx watch src/api/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "mcp": "tsx src/mcp/server.ts",
    "docker:install": "docker exec manga-backend npm install",
    "docker:add": "docker exec manga-backend npm install",
    "docker:remove": "docker exec manga-backend npm uninstall",
    "docker:update": "docker exec manga-backend npm update"
  },
  "keywords": [
    "manga",
    "mcp",
    "gemini",
    "ai",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "pg": "^8.13.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cheerio": "^0.22.35",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
